<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="presentation.devicedetails.DeviceDetailsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/device_avatar_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/device_title_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/device_avatar_image_view"
        app:layout_constraintStart_toEndOf="@id/device_avatar_image_view"
        app:layout_constraintTop_toTopOf="@id/device_avatar_image_view"
        tools:text="Home Number 22" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sn_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/device_avatar_image_view"
        tools:text="SN - 2123123123" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mac_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sn_text_view"
        tools:text="MAC address - 21:23:12:31:23" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/firm_ware_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mac_address_text_view"
        tools:text="Firm ware - 113./1231" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/model_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firm_ware_text_view"
        tools:text="Model - Vera adge" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/save_button"
        android:text="@string/save"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>